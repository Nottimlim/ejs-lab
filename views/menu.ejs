<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
    <style>
        .underline { 
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>
    <h1>Full Menu</h1>
    <h2 class="underline">Mains</h2>
    <% menu.forEach(item => { %>
        <% if (item.category === 'mains') { %>
            <h3><%= item.name %></h3>
            <p>Price: $<%= item.price %></p>
            <p>Rating: <%= item.rating %> stars</p>
            <p>Details: <%= item.details %></p>
        <% } %>
    <% }) %>

    <h2 class="underline">Desserts</h2>
    <% menu.forEach(item => { %>
        <% if (item.category === 'desserts') { %>
            <h3><%= item.name %></h3>
            <p>Price: $<%= item.price %></p>
            <p>Rating: <%= item.rating %> stars</p>
            <p>Details: <%= item.details %></p>
        <% } %>
    <% }) %>

    <h2 class="underline">Sides</h2>
    <% menu.forEach(item => { %>
        <% if (item.category === 'sides') { %>
            <h3><%= item.name %></h3>
            <p>Price: $<%= item.price %></p>
            <p>Rating: <%= item.rating %> stars</p>
            <p>Details: <%= item.details %></p>
        <% } %>
    <% }) %>
</body>
</html>
